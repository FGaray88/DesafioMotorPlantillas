<form action="/products" method="post">
    <div style="margin-bottom: 16px;">
        <div style="display: flex;justify-content: center;align-items: center;flex-direction: column;">
            <label for="nombre"> Titulo: </label>
            <br>
            <input type="text" name="nombre" id="title" style="margin-bottom: 16px;" class="input-file">
        </div>
        <div style="display: flex;justify-content: center;align-items: center;flex-direction: column;">
            <label for="precio"> Precio: </label>
            <br>
            <input type="number" name="precio" id="precio" style="margin-bottom: 16px;" step=".01" class="input-file">
        </div>
        <div style="display: flex;justify-content: center;align-items: center;flex-direction: column;">
            <label for="descr"> Descripcion: </label>
            <br>
            <input type="text" name="descr" id="title" style="margin-bottom: 16px;" class="input-file">
        </div>
        <div style="display: flex;justify-content: center;align-items: center;flex-direction: column;">
            <label for="picture"> URL Imagen: </label>
            <br>
            <input type="text" name="picture" id="thumbnail" style="margin-bottom: 16px;" class="input-file">
        </div>
        <div style="display: flex; justify-content: center; align-items: center;"><input type="submit"
            value="Crear producto" class="submit-button"></div>
    </div>
</form>