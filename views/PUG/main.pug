extends ./index

block main
    h1 ESTO ES PUG
    if form
        div 
            a(href="/")
                button="Ver Productos"

        form(action="/products" method="post")
            div(style="display: flex;justify-content: center;align-items: center;flex-direction: column;")
                label(for="nombre")="Titulo"
                br
                input(type="text" name="nombre" id="title" style="margin-bottom: 16px;" class="input-file")

            div(style="display: flex;justify-content: center;align-items: center;flex-direction: column;")
                label(for="precio")="Precio"
                br
                input(type="text" name="precio" id="precio" style="margin-bottom: 16px;" class="input-file")

            div(style="display: flex;justify-content: center;align-items: center;flex-direction: column;")
                label(for="descr")="Descripcion"
                br
                input(type="text" name="descr" id="descr" style="margin-bottom: 16px;" class="input-file")

            div(style="display: flex;justify-content: center;align-items: center;flex-direction: column;")
                label(for="picture")="Imagen"
                br
                input(type="text" name="picture" id="picture" style="margin-bottom: 16px;" class="input-file")
            div(style="display: flex; justify-content: center; align-items: center;")
                input(type="submit" value="Crear producto" class="submit-button")
    if mostrarProductos
        div 
            a(href="form")
                button="Ver Formulario"
        div(style="display: flex; flex-wrap: wrap; padding: 10px; background-color: darkslategrey")
            each item in products
                div(style="height: 250px; width: 250px; padding-bottom: 100px; margin:16px;")
                    img( src=item.picture alt=item.id style="width: 100%; min-height: 100%; max-height: 100%; border-radius: 25px")
                    h3(style="font-family: monospace; text-align: center; font-size:large; color:whitesmoke")=item.nombre
                    h4(style="font-family: monospace; text-align: center; font-size:large; color:whitesmoke")=item.precio